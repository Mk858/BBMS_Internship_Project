@model IEnumerable<BBMS_Project.Models.SeekerModel>

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<<h4 style="margin-left:1000px ; padding-top:70px">
    Seeker Request
</h4>

<p><a class="btn btn-default" href="@Url.Action("index", "Home")"> Go To Dashboard  &raquo;</a></p>
<table class="table" text-center" border="2" style="background-color:lightblue ; width:82% ;margin-left:312px">
    <tr>
       @* <th>
            @Html.DisplayNameFor(model => model.seekerrequestid)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bloodgroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bloodbank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequirementDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReqStat)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            @*<td>
                @Html.DisplayFor(modelItem => item.seekerrequestid)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(model => item.Bloodgroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bloodbank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequirementDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td style="font-weight: bold; color: #3c64ad">
                @Html.DisplayFor(modelItem => item.ReqStat)
            </td>
            <td>
                @Html.ActionLink("Approve", "ApproveSeekerReq", new { id = item.seekerrequestid, vol = item.Volume }, new { @class = "btn btn-info fa fa-pencil", style = "background-color: #3c64ad" }) |
                @Html.ActionLink("Cancel", "RejectSeekerReq", new { id = item.seekerrequestid }, new { @class = "btn btn-info fa fa-pencil", style = "background-color: #cd1a1a" })
                @* @Html.ActionLink("Delete", "Delete", new { id = item.seekerid })*@
            </td>
        </tr>
    }

</table>


